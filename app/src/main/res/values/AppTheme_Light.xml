<?xml version="1.0" encoding="utf-8"?>
<resources>

	<style name="AppTheme.Light" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
		<item name="isLightTheme">true</item>
		<item name="android:windowLightStatusBar">true</item>
		<item name="android:statusBarColor">?colorPrimary</item>

		<item name="colorAccent">#2A59B6</item>
		<item name="colorAccentTransparent">#332A59B6</item>

		<item name="colorPrimary">#fbfbfb</item>
		<item name="colorPrimaryTransparent">#00fbfbfb</item>
		<item name="colorPrimaryDark">#e0e0e0</item>
		<item name="colorOnPrimary">#111</item>
		<item name="colorSecondary">?colorPrimary</item>
		<item name="colorOnSecondary">?colorOnPrimary</item>
		<item name="colorSurface">?colorPrimary</item>
		<item name="colorOnSurface">?colorOnPrimary</item>
		<item name="colorOnBackground">?colorOnPrimary</item>

		<item name="android:colorBackground">#fff</item>
		<item name="android:colorEdgeEffect">?colorAccent</item>

		<item name="md_background_color">?colorSurface</item>
		<item name="md_color_title">?colorOnSurface</item>
		<item name="md_color_content">?colorOnSurface</item>
		<item name="md_color_button_text">?colorAccent</item>

		<item name="bottomNavigationStyle">@style/myBottomNavigationStyle.Light</item>
		<item name="buttonStyle">@style/myButtonStyle</item>
		<item name="myReaderTextStyle">@style/myReaderTextStyle.Light</item>
		<item name="tabStyle">@style/myTabLayout</item>
		<item name="appBarLayoutStyle">@style/myAppBarLayoutStyle</item>
		s
		<item name="noneStateTint">#333</item>
		<item name="positiveStateTint">#71A30E</item>
		<item name="negativeStateTint">#C81414</item>
		<item name="myColorControlNormalPale">#aaa</item>

		<item name="android:scrollbarThumbVertical">@drawable/scrollbar_thumb</item>

		<item name="android:windowAnimationStyle">@style/WindowAnimationStyle</item>

		<item name="bottomSheetDialogTheme">@style/myBottomSheetDialogStyle.Light</item>
	</style>

	<style name="myReaderTextStyle.Light">
		<item name="android:textColor">#333</item>
	</style>

	<style name="myBottomNavigationStyle.Light" parent="myBottomNavigationStyle">
		<item name="itemIconTint">@color/icon_effect_light</item>
		<item name="itemTextColor">@color/icon_effect_light</item>
	</style>

	<style name="myBottomSheetStyle.Light">
		<!-- Using tint instead of background color (works for unknown reasons) -->
		<item name="backgroundTint">#fbfbfb</item>
	</style>

	<style name="myBottomSheetDialogStyle.Light">
		<item name="bottomSheetStyle">@style/myBottomSheetStyle.Light</item>
	</style>

</resources>